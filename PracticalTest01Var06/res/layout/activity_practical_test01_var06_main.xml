<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var06.PracticalTest01Var06MainActivity" >

    <EditText
        android:id="@+id/top_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/top_edit_text"
        android:layout_below="@id/top_edit_text"
        android:text="@string/less_details" />

    <Button
        android:id="@+id/pass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/details"
        android:layout_below="@id/details"
        android:text="@string/pass"
        android:visibility="visible"
        android:background="@color/green" 
        
        />

    <EditText
        android:id="@+id/lower_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_edit_text"
        android:layout_below="@id/details"
        android:layout_toLeftOf="@+id/pass_button"
        android:inputType="text" />
    
    <Button 
        android:id="@+id/navigate_to_secondary_activity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/navigate_to_secondary_activity"
        android:layout_below="@id/pass_button"
        
        />

</RelativeLayout>